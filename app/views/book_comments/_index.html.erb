<% book.book_comments.each do |book_comment| %>
  <% book_comment_user = book_comment.user %>
  <tr>
    <td>
        <%= link_to user_path(book_comment_user), class: "user_#{book_comment_user.id}" do %>
          <%= image_tag book_comment.user.get_profile_image(100,100) %>
          <%= book_comment_user.name %>
        <% end %>
    </td>
  	<td><%= book_comment.comment %></td>
      <% if current_user == book_comment.user %>
        <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class: 'btn-sm btn-danger', method: :delete, remote: true %></td>
      <% end %>
    </td>
  </tr>
<% end %>