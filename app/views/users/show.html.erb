<main>
  <p id="notice"></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <%= form_with model: @user do |f| %>
        <table class='table'>
          <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
          <tr>
        	  <th>name</th>
        	    <td><%= @user.name %></td>
          </tr>
          <tr>
        	  <th>introduction</th>
        	    <td><%= @user.introduction %></td>
          </tr>
        </table>
        <% end %>

      <div class='row'>
        <% if @user == current_user %>
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
      </div>

    <%= form_with model: @book do |f| %>
    <h2 class="mt-3">New book</h2>

      <form action="/books" accept-charset="UTF-8" method="post"><input type="hidden" name="authenticity_token" value="0sAWM_T-aS8Z1jtwn8dEFmSNWtEzeB8WPDTQ4XKM5mlNiMjvUAgehylAUFzPqctK39FyXdI0WUlllcX3v_MVjg" autocomplete="off" />

        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class: "form-control book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>

      </form>
    <% end %>

    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
        <% @books.each do |book| %>
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th>colspan="3"</th>
              </tr>
              <tr>
                <td></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
              </tr>
            </thead>
          </table>
